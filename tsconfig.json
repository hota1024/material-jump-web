{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@types/webpack",
      "@types/webpack-dev-server"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}